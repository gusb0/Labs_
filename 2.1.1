#include <iostream>
#include <vector>
#include <algorithm> // для сортування

using namespace std;

int main() {
    const int n = 8; // кількість елементів масиву
    vector<double> arr(n); // оголошуємо масив дійсних чисел
    
    // Ініціалізація масиву згідно з варіантом
    for (int i = 0; i < n; i++) {
        if ((i + 1) % 2 == 0) {
            // Парні індекси (i+1), тобто 2, 4, 6...
            arr[i] = 2 * (i + 1) + 1.4;
        } else {
            // Непарні індекси (i+1), тобто 1, 3, 5...
            arr[i] = (i + 1) + 5.8;
        }
    }

    // Виведення масиву до сортування
    cout << "Масив до сортування:" << endl;
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    // Сортування масиву за зростанням
    sort(arr.begin(), arr.end());

    // Виведення масиву після сортування
    cout << "Масив після сортування за зростанням:" << endl;
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    return 0;
}
