#include <stdio.h>

int main() {
    // 1. Опис змінних типів: int, float, unsigned short
    int a = 682;
    float b = -8.4e2;  // це означає -840
    unsigned short c = 25921;

    // 2. Виведення змінних, що описані в п.1
    printf("Значення змінних:\n");
    printf("int a = %d\n", a);
    printf("float b = %f\n", b);
    printf("unsigned short c = %u\n", c);

    // 3. Опис змінних типів: double, int, char
    double d;
    int e;
    char f;

    // 4. Ініціювання змінних з неявним і явним приведенням типів

    // Неявне приведення типів
    d = b;  // float до double
    printf("\nНеявне приведення типу float до double: d = %f\n", d);

    // Явне приведення типів
    e = (int)b;  // float до int
    printf("Явне приведення типу float до int: e = %d\n", e);

    // Механізм обходу суворої типізації (через привласнення unsigned short до char)
    f = (char)c;  // unsigned short до char
    printf("Обхід суворої типізації: привласнення unsigned short до char: f = %d\n", f);  // Виведення в числовому форматі для відображення результату

    return 0;
}
